root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,**.mk}]
indent_style = tab

[{*.sql, *.json, *.yaml}]
charset = utf-8
indent_style = none
indent_size = none
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
